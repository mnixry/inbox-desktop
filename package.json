        "cross-env": "^7.0.3",
        "css-loader": "^6.10.0",
        "dotenv": "^16.4.5",
        "electron": "29.0.1",
        "eslint": "^8.57.0",
        "eslint-plugin-import": "^2.29.1",
        "fork-ts-checker-webpack-plugin": "^9.0.2",
        "mac-appify": "^2019.4.13",
        "node-loader": "^2.0.0",
        "prettier": "3.2.5",
